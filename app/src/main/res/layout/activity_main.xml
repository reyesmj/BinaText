<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="10dp"
    tools:context=".MainActivity">

    <com.google.android.material.textfield.TextInputLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="@string/select"
        android:padding="10dp"
        android:id="@+id/aboveselector"
        style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox.ExposedDropdownMenu">
        <AutoCompleteTextView
            android:id="@+id/auto_complete_txt"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:inputType="none"/>
    </com.google.android.material.textfield.TextInputLayout>
<ScrollView
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_below="@+id/aboveselector">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:padding="10dp"
        android:layout_marginTop="5dp"
       >

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Input"
            android:id="@+id/input"
            android:fontFamily="sans-serif-light"
            android:textSize="16sp"
            android:textColor="@color/black" />
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="250dp"
            android:id="@+id/rel"
            android:padding="10dp"
            android:background="@drawable/shape"
            android:layout_marginTop="10dp"
            android:layout_below="@+id/input">

        <EditText
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:textSize="20sp"
            android:fontFamily="sans-serif-light"
            android:textColor="@color/black"
            android:id="@+id/userInput"
            android:background="@drawable/shape_inv"
            android:layout_alignParentStart="true"

            />
        </RelativeLayout>

        <Button
            android:layout_width="110dp"
            android:layout_height="wrap_content"
            android:text="convert"
            android:background="@drawable/button_round"
            android:id="@+id/convertInput"
            android:layout_below="@+id/rel"
            android:layout_centerHorizontal="true"
            android:layout_margin="10dp"
            />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Result"
            android:id="@+id/input2"
            android:fontFamily="sans-serif-light"
            android:textSize="16sp"
            android:layout_below="@+id/convertInput"
            android:textColor="@color/black" />
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="250dp"
            android:layout_below="@+id/input2"
            android:padding="10dp"
            android:id="@+id/inputResult"
            android:layout_centerInParent="true"
            android:layout_marginTop="10dp"
            android:background="@drawable/shape"
            >
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/output"
                android:textSize="20sp"
                android:textColor="@color/black"
                android:fontFamily="sans-serif-light"
                android:layout_alignParentStart="true"/>

        </RelativeLayout>

        <Button
            android:layout_width="110dp"
            android:layout_height="wrap_content"
            android:text="copy"
            android:id="@+id/copyResult"
            android:background="@drawable/button_round"
            android:layout_below="@+id/inputResult"
            android:layout_centerHorizontal="true"
            android:layout_margin="10dp"
            />



    </RelativeLayout>
</ScrollView>




</RelativeLayout>